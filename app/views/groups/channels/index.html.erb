<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render "groups/introduction", group: @group %>

  <div class="flex justify-between items-center">
    <%= link_to "番組を作る", new_channel_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%= link_to "新着エピソード", @group, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "番組 (here)", group_channels_path(@group), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "メンバー(未実装)", @group, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <div id="channels" class="min-w-full">
    <%= render partial: "channels/channel", collection: @channels or '番組はありません' %>
  </div>
</div>
