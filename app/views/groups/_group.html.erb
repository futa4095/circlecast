<div id="<%= dom_id group %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">名前:</strong>
    <%= group.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">グループの説明:</strong>
    <%= group.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "詳細", group, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to '編集', edit_group_path(group), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
