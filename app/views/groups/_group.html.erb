<div id="<%= dom_id group %>">
  <h2 class="my-5 text-2xl">
    <%= link_to group.name, group %>
  </h2>
  <p class="my-5">
    <%= group.description %>
  </p>
  <p class="my-5">
    <% if group.icon.attached? %>
      <%= link_to group do %>
        <%= image_tag group.icon %>
      <% end %>
    <% else %>
      アイコン画像はありません
    <% end %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "詳細", group, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to '編集', edit_group_path(group), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
