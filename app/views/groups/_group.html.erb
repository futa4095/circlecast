<div id="<%= dom_id group %>">
  <h2 class="my-5 text-2xl">
    <%= link_to group.name, group %>
  </h2>
  <p class="my-5">
    <%= group.description %>
  </p>
  <p class="my-5">
    <% if group.icon.attached? %>
      <%= link_to group do %>
        <%= image_tag group.icon %>
      <% end %>
    <% else %>
      アイコン画像はありません
    <% end %>
  </p>
  <hr class="mt-6">
</div>
