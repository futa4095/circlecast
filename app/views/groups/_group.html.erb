<div id="<%= dom_id group %>">
  <%= link_to group, class: 'flex flex-row items-center overflow-hidden bg-white border border-gray-300 rounded-lg hover:bg-gray-100' do %>
    <div class="object-cover">
      <% if group.icon.attached? %>
          <%= image_tag group.icon, alt: "#{group.name}のアイコン", class: 'size-24 md:size-40 max-w-none rounded-l' %>
      <% else %>
        <%= image_tag 'default-group.svg', alt: 'グループのアイコン', class: 'size-24 md:size-40 max-w-none rounded-l' %>
      <% end %>
    </div>
    <div class="flex flex-col justify-between p-1 md:p-4 leading-normal w-4/5 min-w-0">
      <h2 class="md:mb-2 text-md md:text-2xl font-semibold tracking-tight text-gray-700 truncate hover:underline">
        <%= group.name %>
      </h2>
      <p class="md:mb-3 text-sm md:text-base line-clamp-3">
        <%= group.description %>
      </p>
    </div>
  <% end %>
</div>
