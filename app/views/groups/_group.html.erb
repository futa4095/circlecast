<div id="<%= dom_id group %>">
  <%= link_to group, class: 'flex flex-row items-start bg-white border border-gray-300 rounded-lg hover:bg-gray-100' do %>
    <div class="object-cover w-full h-96 md:h-auto md:w-48">
      <% if group.icon.attached? %>
          <%= image_tag group.icon, class: 'h-40 max-w-none w-40' %>
      <% else %>
        <%= image_tag 'default-group.svg', class: ' h-40 max-w-none w-40' %>
      <% end %>
    </div>
    <div class="flex flex-col justify-between p-4 leading-normal">
      <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 line-clamp-2">
        <%= group.name %>
      </h2>
      <p class="mb-3 font-normal text-gray-700 line-clamp-3">
        <%= group.description %>
      </p>
    </div>
  <% end %>
</div>
