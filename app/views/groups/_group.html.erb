<div id="<%= dom_id group %>" class="block p-6 bg-white border border-gray-200 rounded shadow hover:bg-gray-100">
  <%= link_to group, class: 'flex' do %>
    <div class="order-2">
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
        <%= group.name %>
      </h5>
      <p class="font-normal text-gray-700 dark:text-gray-400">
        <%= group.description %>
      </p>
    </div>
    <div>
      <% if group.icon.attached? %>
          <%= image_tag group.icon %>
      <% else %>
        アイコン画像はありません(TODO: デフォルト画像を置く)
      <% end %>
    </div>
  <% end %>
</div>
