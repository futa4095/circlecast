<div id="<%= dom_id group %>" class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
  <h2 class="my-5 text-2xl">
    <%= link_to group.name, group %>
  </h2>
  <p class="my-5">
    <%= group.description %>
  </p>
  <p class="my-5">
    <% if group.icon.attached? %>
      <%= link_to group do %>
        <%= image_tag group.icon %>
      <% end %>
    <% else %>
      アイコン画像はありません
    <% end %>
  </p>
</div>
