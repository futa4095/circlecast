<tr id="<%= dom_id membership %>" class="bg-white border-b">
  <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
    <%= membership.user.name %>
  </th>
  <td class="px-6 py-4" data-turbo-submits-with="aaaf">
    <%= membership.user.email %>
  </td>
  <td class="px-6 py-4">
    <% unless current_user == membership.user %>
      <%= button_to(
            group_member_path(
              membership.group,
              membership.user
            ),
            method: :patch,
            params: { membership: { admin: !membership.admin } },
            data: { turbo_submits_with: '送信中...' },
            role: 'switch',
            'aria-checked': membership.admin.to_s,
            class: if membership.admin
                    'relative inline-flex h-5 w-8 shrink-0 cursor-pointer appearance-none rounded-full border-2 border-transparent bg-blue-700 transition focus:outline-none focus:ring focus:ring-blue-200'
                  else
                    'relative inline-flex h-5 w-8 shrink-0 cursor-pointer appearance-none rounded-full border-2 border-transparent bg-gray-200 transition focus:outline-none focus:ring focus:ring-blue-200'
                  end
          ) do %>
        <span
          aria-hidden="true"
          class="<%= if membership.admin
                      'pointer-events-none inline-block h-4 w-4 translate-x-3 rounded-full bg-white transition will-change-transform'
                    else
                      'pointer-events-none inline-block h-4 w-4 translate-x-0 rounded-full bg-white transition will-change-transform'
                    end %>" />
      <% end %>
    <% end %>
  </td>
  <td class="px-6 py-4">
    <% unless current_user == membership.user %>
      <%= button_to(
            group_member_path(
              membership.group,
              membership.user
            ),
            method: :patch,
            params: { membership: { withdrawal: !membership.withdrawal } },
            data: { turbo_submits_with: '送信中...' },
            role: 'switch',
            'aria-checked': membership.withdrawal.to_s,
            class: if membership.withdrawal
                    'relative inline-flex h-5 w-8 shrink-0 cursor-pointer appearance-none rounded-full border-2 border-transparent bg-blue-700 transition focus:outline-none focus:ring focus:ring-blue-200'
                  else
                    'relative inline-flex h-5 w-8 shrink-0 cursor-pointer appearance-none rounded-full border-2 border-transparent bg-gray-200 transition focus:outline-none focus:ring focus:ring-blue-200'
                  end
          ) do %>
        <span
          aria-hidden="true"
          class="<%= if membership.withdrawal
                      'pointer-events-none inline-block h-4 w-4 translate-x-3 rounded-full bg-white transition will-change-transform'
                    else
                      'pointer-events-none inline-block h-4 w-4 translate-x-0 rounded-full bg-white transition will-change-transform'
                    end %>" />
      <% end %>
    <% end %>
  </td>
</tr>
