<div class="md:flex gap-3">
  <div>
    <% if group.icon.attached? %>
      <%= image_tag group.icon, alt: "#{group.name}のアイコン", class: 'size-28 max-w-full md:max-w-none object-scale-down rounded mx-auto' %>
    <% else %>
      <%= image_tag 'default-group.svg', alt: 'グループのアイコン', class: 'size-28 max-w-none object-scale-down rounded mx-auto' %>
    <% end %>
  </div>
  <div class="flex-1">
    <div class="flex justify-between w-full">
      <h1 class="font-bold text-xl md:text-4xl"><%= group.name %></h1>
      <div x-data="{ open: false }" class="relative">
        <button type="button" @click="open = !open" class="menu-button inline-flex self-center items-center px-1 py-2.5 bg-white rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-50 focus:outline-none h-fit">
          <svg class="size-5 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 4 15">
            <path d="M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z"/>
          </svg>
        </button>
        <div x-show="open" @click.away="open = false" x-transition x-cloak class="absolute right-0 mt-2 w-40 bg-white border border-gray-300 rounded-lg group-hover:block z-10">
          <% if group.admin? current_user %>
            <%= link_to 'グループの編集', edit_group_path(group), class: 'flex w-full items-center rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100' %>
            <%= button_to 'グループの削除', group, method: :delete, data: { turbo_confirm: "このグループを削除すると、それに関連するデータも失われますが、後で取り消すことはできません。\n\n本当に削除してもよろしいですか？" }, class: 'flex w-full items-center rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100' %>
            <%= render 'groups/invitation_modal', group: %>
          <% end %>
          <%= button_to(
            'グループから脱退',
            group_member_path(group, current_user),
            method: :patch,
            params: { membership: { withdrawal: true } },
            data: { turbo_confirm: '脱退すると、グループの番組を利用できなくなります。よろしいですか？' },
            class: 'flex w-full items-center rounded-md px-3 py-2 text-gray-700 hover:bg-gray-100'
          ) %>
        </div>
      </div>
    </div>
    <div>
      <% if description_too_long? group.description %>
        <input type="checkbox" id="toggle_show_hidden" class="peer invisible absolute">
        <div class="mt-2 max-h-24 text-sm text-gray-500 overflow-hidden transition-all ease-out peer-checked:max-h-[100rem] peer-checked:overflow-visible">
          <%= simple_format h(group.description) %>
        </div>
        <label for="toggle_show_hidden" class="block text-sm text-blue-700 cursor-pointer peer-checked:hidden">続きを見る</label>
        <label for="toggle_show_hidden" class="text-sm text-blue-700 cursor-pointer hidden peer-checked:block">閉じる</label>
      <% else %>
        <div class="mt-2 text-sm text-gray-500">
          <%= simple_format h(group.description) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
