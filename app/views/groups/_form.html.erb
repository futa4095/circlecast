<%= form_with(model: group, class: 'contents') do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: 'mb-1 block font-medium text-gray-800' %>
    <%= form.text_field :name, maxlength: 100, class: 'block rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: 'mb-1 block font-medium text-gray-800' %>
    <%= form.text_area :description, rows: 8, class: 'block rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class="my-5">
    <%= form.label :icon, class: 'mb-1 block font-medium text-gray-800' %>
    <%= form.file_field :icon,
                        accept: 'image/jpeg, image/png, image/webp',
                        class: 'block rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full' %>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
      縦横3000ピクセル以内, 正方形を推奨, 3MB以内
    </p>
  </div>

  <div class="inline">
    <%= form.submit class: 'text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 cursor-pointer' %>
  </div>
<% end %>
