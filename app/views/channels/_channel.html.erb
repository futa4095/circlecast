<div id="<%= dom_id channel %>" class="block p-6 bg-white border border-gray-200 rounded shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
  <%= link_to channel do %>
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
      <%= channel.title %>
    </h5>
    <p class="font-normal text-gray-700 dark:text-gray-400">
      <%= channel.description %>
    </p>
    <p class="my-5">
      <% if channel.artwork.attached? %>
          <%= image_tag channel.artwork %>
      <% else %>
        アートワーク画像はありません
      <% end %>
    </p>
  <% end %>
</div>
