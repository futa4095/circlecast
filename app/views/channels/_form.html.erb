<%= form_with(model: [channel.group, channel], class: 'contents') do |form| %>
  <% if channel.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <ul>
        <% channel.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title, class: 'mb-1 block font-medium text-gray-800' %>
    <%= form.text_field :title, maxlength: 100, class: 'block rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: 'mb-1 block font-medium text-gray-800' %>
    <%= form.text_area :description, rows: 8, class: 'block rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class="my-5">
    <%= form.label :artwork, class: 'mb-1 block font-medium text-gray-800' %>
    <%= form.file_field :artwork,
                        accept: 'image/jpeg, image/png, image/webp',
                        class: 'block rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full' %>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
      縦横3000ピクセル以内, 正方形を推奨, 3MB以内
    </p>
  </div>

  <div class="inline">
    <%= form.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
