<% content_for :title, "#{@episode.title} - " %>
<article class="w-full flex gap-3">
  <div class="basis-1/5">
    <% if @channel.artwork.attached? %>
      <%= image_tag @channel.artwork, class: 'size-48 max-w-none' %>
    <% else %>
      <%= image_tag 'default-channel.svg', class: 'size-48 max-w-none' %>
    <% end %>
  </div>
  <div class="basis-3/5">
    <%= link_to @channel.title, @channel, class: 'bg-blue-50 hover:bg-blue-100 text-blue-700 text-sm font-medium px-2.5 py-0.5 rounded border border-blue-400' %>
    <h1 class="font-bold text-4xl my-2"><%= @episode.title %></h1>
    <p class="my-2 flex gap-1">
      <svg class="size-5 text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
