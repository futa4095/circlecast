<section class="text-center">
  <div class="py-8 px-4 mx-auto lg:py-14 space-y-10">
    <h1 class="font-logo text-blue-600 text-5xl md:text-6xl">CIRCLECAST</h1>
    <p class="text-xl font-bold tracking-tight text-gray-800 md:text-2xl lg:text-2xl">
      プライベートなグループ向け<br>ポッドキャストサービス
    </p>
    <div>
      <%= link_to '新規登録', new_user_registration_path, class: 'text-blue-600 hover:text-white border border-blue-600 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-8 py-3.5 text-center me-2 mb-2' %>
